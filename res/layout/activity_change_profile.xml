<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Change_profile"
     >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarselect"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/change_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/change_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_marginRight="5dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/prof_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"
                android:layout_below="@id/change_close"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/change_profile_img_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change_profile_image"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#E0D621"
                android:layout_below="@id/prof_img"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"

        >

        <EditText
            android:id="@+id/change_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="new_username"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textColorHint="#79E9E0"
            android:textColor="#58CFDA"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="new password"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:layout_below="@id/change_username"
            android:textColorHint="#EEE0E0"
            android:textColor="#DEDEF0"
            android:textStyle="bold"/>

         <Button
             android:id="@+id/change_inform_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Change_information"
             android:textSize="20sp"
             android:textStyle="bold"
             android:textColor="#F51D1D"
             android:layout_below="@id/change_password"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="80dp"/>


    </RelativeLayout>







</RelativeLayout>